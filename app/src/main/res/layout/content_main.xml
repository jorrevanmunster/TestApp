<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/num7"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="7"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintBottom_toTopOf="@+id/num4" app:layout_constraintEnd_toStartOf="@+id/num8"/>
    <Button
            android:id="@+id/num4"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="4"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            app:layout_constraintBottom_toTopOf="@+id/num1"
            app:layout_constraintEnd_toStartOf="@+id/num5"/>
    <Button
            android:id="@+id/num8"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="8"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintBottom_toTopOf="@+id/num4" app:layout_constraintEnd_toStartOf="@+id/num3"/>
    <Button
            android:id="@+id/num6"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="6"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonMultiply" app:layout_constraintBottom_toTopOf="@+id/num3"/>
    <Button
            android:id="@+id/num1"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="1"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonDot" app:layout_constraintEnd_toStartOf="@+id/num2"/>
    <Button
            android:id="@+id/num9"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="9"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonDivide" app:layout_constraintBottom_toTopOf="@+id/num5"/>
    <Button
            android:id="@+id/num5"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="5"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintBottom_toTopOf="@+id/num2" app:layout_constraintEnd_toStartOf="@+id/num6"/>
    <Button
            android:id="@+id/num2"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="2"
            style="@android:style/Widget.Button"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintEnd_toStartOf="@+id/num3" app:layout_constraintBottom_toTopOf="@+id/num0"
            android:layout_marginBottom="8dp"/>
    <Button
            android:id="@+id/num3"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="3"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonSubtract"
            app:layout_constraintBottom_toTopOf="@+id/buttonEqual"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laten we eens wat uitrekenen!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/buttonDivide"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="/"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginBottom="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>

    <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="*"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>

    <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="-"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonMultiply"/>

    <Button
            android:id="@+id/buttonAdd"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="+"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonSubtract"/>

    <Button
            android:id="@+id/buttonEqual"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="="
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonAdd"
            app:layout_constraintTop_toTopOf="@+id/buttonAdd"
            />

    <Button
            android:id="@+id/buttonDot"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="."
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintEnd_toStartOf="@+id/num0"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            app:layout_constraintTop_toTopOf="@+id/buttonEqual"
    />

    <Button
            android:id="@+id/buttonClear"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="C"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonDot"
            app:layout_constraintTop_toTopOf="@+id/buttonDot"
            />

    <Button
            android:id="@+id/num0"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:text="0"
            style="@android:style/Widget.Button"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonEqual"/>
</android.support.constraint.ConstraintLayout>